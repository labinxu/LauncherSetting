<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.stc.launchersetting.ColorPickerView
        android:id="@+id/color_picker_view"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="100dp">
    <!-- row 1 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/color_picker_red"
                android:background="#ff0000"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/color_picker_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#00ff00"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/color_picker_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#0000ff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/color_picker_white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_weight="1"/>
        </LinearLayout>
    <!-- Row 2-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:gravity="center">
            <Button
                android:id="@+id/color_picker_yellow"
                android:background="#ffff00"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/color_picker_indigo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#4B0082"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/color_picker_fuchsia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ff00ff"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/color_picker_black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>